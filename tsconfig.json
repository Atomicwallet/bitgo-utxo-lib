{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "watch": true,
    "allowJs": true,
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDirs": [
      "src",
      "tests"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
